generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  username     String @unique
  passwordHash String
}

enum Platform {
  XING
  LINKEDIN
  MEDIUM
  RSS
  WEBHOOK
}

enum Language {
  DE
  EN
}

enum PublicationStatus {
  PENDING
  PUBLISHED
  ERROR
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Article {
  id               String           @id @default(uuid())
  title            String
  slug             String           @unique
  sourceUrl        String
  rawTranscript    String           @db.Text
  markdownContent  String?          @db.Text
  linkedinTeaser   String?          @db.Text
  xingSummary      String?          @db.Text
  ogImageUrl       String?
  category         String?
  processingStatus ProcessingStatus @default(PROCESSING)

  seoTitle       String?
  seoDescription String?   @db.Text
  scheduledAt    DateTime?

  // --- EN Caching Fields ---
  titleEn            String?
  markdownContentEn  String? @db.Text
  linkedinTeaserEn   String? @db.Text
  xingSummaryEn      String? @db.Text
  seoTitleEn         String?
  seoDescriptionEn   String? @db.Text

  createdAt    DateTime      @default(now())
  publications Publication[]
}

model Publication {
  id           String            @id @default(uuid())
  articleId    String
  article      Article           @relation(fields: [articleId], references: [id])
  platform     Platform
  status       PublicationStatus @default(PENDING)
  platformId   String? // ID assigned by the platform (e.g., ActivityID)
  errorMessage String?           @db.Text
  publishedAt  DateTime?
  language     Language          @default(DE)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@unique([articleId, platform, language])
}
